    <div class="login-container">
        <h2>Professor Login</h2>
        <form id="loginForm" onsubmit="return validateLogin()">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-group">
                <button type="submit">Log In</button>
            </div>
        </form>
    </div>

    <script>
        // Simple login validation script
        function validateLogin() {
            // Get username and password from the form
            var username = document.getElementById('username').value;
            var password = document.getElementById('password').value;

            // Hardcoded login credentials (for demonstration purposes)
            var validUsername = "professor";
            var validPassword = "password123";

            // Check if entered credentials are correct
            if (username === validUsername && password === validPassword) {
                // Redirect to Notion page if credentials are correct
                window.location.href = "https://www.notion.so/Certification-Tracker-673f267d107b483db1935ad2a1b58d29?pvs=4"; // Replace with your Notion URL
                return false; // Prevent the form from submitting normally
            } else {
                alert("Invalid username or password");
                return false; // Prevent the form from submitting normally
            }
        }
    </script>
